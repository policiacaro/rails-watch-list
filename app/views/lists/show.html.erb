<div class="container">
  <h1><%= @list.name %></h1>
    <%= link_to new_list_bookmark_path(@list), class: "text-decoration-none" do %>
  <p>add some movies</p>
    <%#= @list.name %>
    <% end %>
  <%#= simple_form_for @bookmark do |f| %>
  <%#= f.associations :movie, include_blank: false, collection: @movies %>
  <%#= f.submit 'add' %>
      <div class="row">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="col-sm-4">
            <div class="card mt-3">
              <%= image_tag bookmark.movie.poster_url, class: "card-img-top" %>
              <div class="card-body">
                <h2 class="card-title"><%= bookmark.movie.title %></h2>
                <h3 class="card-title">"<%= bookmark.comment %>"</h3>
                <p class="card-text">Rating: <%= bookmark.movie.rating %>/5</p>
                <p class="card-text"><%= bookmark.movie.overview %></p>
                <%= link_to "remove bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
</div>
<%= link_to "go back", lists_path(@list), class: "text-decoration-none" %>
